{
  "compilerOptions": {
    "module": "ES2022",
    "moduleResolution": "bundler",
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "skipLibCheck": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "strictBindCallApply": false
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["./src/**/*.spec.ts"],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
